<mvc:View controllerName="hodek.gateapps.controller.GEAsn"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:upload="sap.m.upload"
    xmlns:svm="sap.ui.comp.smartvariants">
    <Page id="asnCreationpage" title="{i18n>title}" class="fullPageBackground" showFooter="true" titleAlignment="Auto"  showNavButton="true" showHeader="false" navButtonPress="onNavBack">
       <HBox width="100%" justifyContent="Center" alignItems="Center" height="90%">
       <VBox class="formContainer" justifyContent="Center" alignItems="Center" width="32rem" height="10rem" >
            <!-- Label -->
            <Label text="Enter ASN Number:" labelFor="idAsnInput"/>
            
            <!-- Input -->
            <Input
    id="idAsnInput"
    value=""
    maxLength="10"
    width="250px"
    liveChange="onAsnLiveChange"/>
            
            <!-- Submit Button -->
            <Button text="Submit" type="Emphasized" press="onSubmitPress"/>
        </VBox></HBox>
    </Page>
</mvc:View>